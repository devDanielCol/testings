---
import type { Lang } from '../../i18n';
import { useTranslations, getLocalizedPath } from '../../i18n';
import { podcastT } from '../../i18n/pages/podcast';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(podcastT);

const platforms = [
  {
    name: "Apple Podcasts",
    url: "https://podcasts.apple.com/ve/podcast/programa-tu-mente/id1726852176",
    color: "#fc3c44",
    colorRgb: "252, 60, 68",
  },
  {
    name: "Spotify",
    url: "https://open.spotify.com/show/4GVA8cd1scFfPQ1F5lAbrF",
    color: "#1db954",
    colorRgb: "29, 185, 84",
  },
  {
    name: "YouTube",
    url: "#",
    color: "#ff0000",
    colorRgb: "255, 0, 0",
  },
];

const topics = [
  { icon: "ai", title: t(lang, 'topics.0.title'), description: t(lang, 'topics.0.description') },
  { icon: "quantum", title: t(lang, 'topics.1.title'), description: t(lang, 'topics.1.description') },
  { icon: "code", title: t(lang, 'topics.2.title'), description: t(lang, 'topics.2.description') },
  { icon: "future", title: t(lang, 'topics.3.title'), description: t(lang, 'topics.3.description') },
];

const stats = [
  { value: t(lang, 'stats.0.value'), label: t(lang, 'stats.0.label') },
  { value: t(lang, 'stats.1.value'), label: t(lang, 'stats.1.label') },
  { value: t(lang, 'stats.2.value'), label: t(lang, 'stats.2.label') },
];

const homePath = getLocalizedPath('/', lang);
const blogPath = getLocalizedPath('/blog', lang);

const structuredData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "PodcastSeries",
  "name": "Programa Tu Mente",
  "description": t(lang, 'meta.description'),
  "url": "https://danielfcramos.dev/programa-tu-mente-podcast",
  "author": {
    "@type": "Person",
    "name": "Daniel Cubillos",
    "url": "https://danielfcramos.dev",
  },
  "inLanguage": "es",
  "genre": ["Technology", "Education", "Science"],
  "webFeed": "https://podcasts.apple.com/ve/podcast/programa-tu-mente/id1726852176",
  "sameAs": [
    "https://podcasts.apple.com/ve/podcast/programa-tu-mente/id1726852176",
    "https://open.spotify.com/show/4GVA8cd1scFfPQ1F5lAbrF",
  ],
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock",
  },
});
---

<script type="application/ld+json" is:inline set:html={structuredData} />

<main id="podcast-page">
  <div class="podcast-bg-effects">
    <div class="podcast-orb orb-1"></div>
    <div class="podcast-orb orb-2"></div>
    <div class="podcast-orb orb-3"></div>
    <div class="grid-lines"></div>
    <div class="noise-overlay"></div>
  </div>

  <!-- HERO -->
  <section class="podcast-hero">
    <div class="container">
      <div class="hero-label">
        <span class="label-dot"></span>
        <span class="label-text">{t(lang, 'hero.label')}</span>
