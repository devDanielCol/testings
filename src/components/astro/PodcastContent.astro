<script>
  async function initPodcastAnimations() {
    try {
      // @ts-ignore
      const { gsap } = await import("gsap");
      // @ts-ignore
      const { ScrollTrigger } = await import("gsap/ScrollTrigger");
      gsap.registerPlugin(ScrollTrigger);

      const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
      if (prefersReducedMotion || (window as any).__GSAP_DISABLE_ANIMATIONS__) return;

      // Hero entrance
      const titleWords = document.querySelectorAll(".title-word");
      gsap.set(titleWords, { opacity: 0, y: 60, rotationX: -45 });
      gsap.to(titleWords, {
        opacity: 1, y: 0, rotationX: 0, duration: 1,
        stagger: { amount: 0.4 }, ease: "power3.out", delay: 0.3,
      });

      gsap.fromTo(".hero-tagline",
        { opacity: 0, y: 30 },
        { opacity: 1, y: 0, duration: 0.8, delay: 0.8, ease: "power2.out" }
      );
      gsap.fromTo(".hero-stats",
        { opacity: 0, y: 20, scale: 0.95 },
        { opacity: 1, y: 0, scale: 1, duration: 0.6, delay: 1, ease: "back.out(1.5)" }
      );
      gsap.fromTo(".platform-buttons",
        { opacity: 0, y: 30 },
        { opacity: 1, y: 0, duration: 0.8, delay: 1.2, ease: "power2.out" }
      );

      // Player section
      ScrollTrigger.create({
        trigger: ".podcast-player", start: "top 85%", once: true,
        onEnter: () => {
          gsap.fromTo(".player-card",
            { opacity: 0, y: 60, scale: 0.96 },
            { opacity: 1, y: 0, scale: 1, duration: 1, ease: "power3.out" }
          );
        },
      });

      // About section
      ScrollTrigger.create({
        trigger: ".podcast-about", start: "top 80%", once: true,
        onEnter: () => {
          gsap.fromTo(".about-content",
            { opacity: 0, x: -40 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out" }
          );
          gsap.fromTo(".about-visual",
            { opacity: 0, x: 40 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out", delay: 0.2 }
          );
        },
      });

      // Topic cards
      ScrollTrigger.create({
        trigger: ".podcast-topics", start: "top 80%", once: true,
        onEnter: () => {
          gsap.fromTo(".topic-card",
            { opacity: 0, y: 50, scale: 0.95 },
            { opacity: 1, y: 0, scale: 1, duration: 0.7, stagger: 0.1, ease: "power3.out" }
          );
        },
      });

      // Host section
      ScrollTrigger.create({
        trigger: ".podcast-host", start: "top 85%", once: true,
        onEnter: () => {
          gsap.fromTo(".host-card",
            { opacity: 0, y: 50, scale: 0.97 },
            { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: "power2.out" }
          );
        },
      });

      // CTA section
      ScrollTrigger.create({
        trigger: ".podcast-cta", start: "top 85%", once: true,
        onEnter: () => {
