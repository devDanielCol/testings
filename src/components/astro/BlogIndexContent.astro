---
import type { Lang } from "../../i18n";
import { useTranslations } from "../../i18n";
import { blogT } from "../../i18n/pages/blog";
import BlogExplorer from "../react/blog/BlogExplorer";

interface Props {
  lang: Lang;
  posts: any[];
  labels: string[];
  nextPageToken?: string;
  error: string | null;
}

const { lang, posts, labels, nextPageToken, error } = Astro.props;
const t = useTranslations(blogT);
const locale = lang === "en" ? "en-US" : "es-ES";
const blogBasePath = lang === "en" ? "/en/blog" : "/blog";
const explorerTranslations = {
  searchPlaceholder: t(lang, "search.placeholder"),
  filterAll: t(lang, "filter.all"),
  paginationPrevious: t(lang, "pagination.previous"),
  paginationNext: t(lang, "pagination.next"),
  emptyNoPostsFound: t(lang, "empty.noPostsFound"),
  emptyNoPostsYet: t(lang, "empty.noPostsYet"),
  emptyTryDifferent: t(lang, "empty.tryDifferent"),
  emptyCheckBackLater: t(lang, "empty.checkBackLater"),
  minLabel: "min",
};

if (error) {
  console.error(error);
}
---

<main id="blog-page">
  <div class="blog-bg-effects">
    <div class="blog-orb orb-1"></div>
    <div class="blog-orb orb-2"></div>
    <div class="grid-lines"></div>
  </div>

  <div class="blog-container">
    <div class="blog-header">
      <div class="header-label">
        <span class="label-dot"></span>
        <span class="label-text">{t(lang, "index.label")}</span>
      </div>
      <h1 class="blog-title">
        <span class="title-word">{t(lang, "index.heading")}</span>
      </h1>
      <p class="blog-subtitle">
        <span class="bracket">&lt;</span>
        {t(lang, "index.subtitle")}
        <span class="bracket">/&gt;</span>
      </p>
    </div>

    {
      error ? (
        <div class="blog-error">
          <p class="error-title">{t(lang, "index.errorTitle")}</p>
          <p class="error-text">{"error loading blog posts"}</p>
        </div>
      ) : (
        <BlogExplorer
          client:load
          initialPosts={posts}
          initialLabels={labels}
          initialPageToken={nextPageToken}
          translations={explorerTranslations}
          blogBasePath={blogBasePath}
          locale={locale}
        />
      )
    }
  </div>
</main>

<style>
  #blog-page {
    position: relative;
    min-height: 100vh;
    padding: 8rem 2rem 6rem;
    background: #000000;
    overflow: hidden;
  }

  .blog-bg-effects {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }
  .blog-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.3;
  }
  .blog-orb.orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 0.35) 0%,
      transparent 70%
    );
    top: -200px;
    right: -150px;
  }
  .blog-orb.orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.25) 0%,
      transparent 70%
    );
    bottom: -150px;
    left: -100px;
  }
  .grid-lines {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.015) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 0%, transparent 70%);
    -webkit-mask-image: radial-gradient(
      ellipse at center,
      black 0%,
      transparent 70%
    );
  }

  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  .header-label {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.6rem 1.2rem;
    background:
      linear-gradient(
        135deg,
        rgba(59, 130, 246, 0.15) 0%,
        rgba(139, 92, 246, 0.1) 100%
      ),
      rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 100px;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
  }
  .label-dot {
    width: 8px;
    height: 8px;
    background: #3b82f6;
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(59, 130, 246, 0.8);
    animation: dotPulse 2s ease-in-out infinite;
  }
  @keyframes dotPulse {
    0%,
    100% {
      opacity: 1;
      box-shadow:
        0 0 0 0 rgba(59, 130, 246, 0.8),
        0 0 10px rgba(59, 130, 246, 0.8);
    }
    50% {
      opacity: 0.7;
      box-shadow:
        0 0 0 10px rgba(59, 130, 246, 0),
        0 0 15px rgba(59, 130, 246, 0.6);
    }
  }
  .label-text {
    font-size: 0.85rem;
    font-weight: 600;
    color: #3b82f6;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .blog-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }
  .title-word {
    background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .blog-subtitle {
    font-family: "JetBrains Mono", "Fira Code", monospace;
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    color: rgba(255, 255, 255, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }
  .bracket {
    color: rgba(59, 130, 246, 0.6);
    font-weight: 300;
  }

  .blog-error {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 24px;
  }
  .error-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.5rem;
  }
  .error-text {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.35);
    font-family: "JetBrains Mono", monospace;
  }

  @media (max-width: 768px) {
    #blog-page {
      padding: 7rem 1.5rem 4rem;
    }
    .blog-header {
      margin-bottom: 3rem;
    }
    .blog-subtitle {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
