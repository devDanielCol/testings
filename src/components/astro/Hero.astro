    font-weight: 600;
  }

  .status-dot {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: #3b82f6;
    box-shadow:
      0 0 10px #3b82f6,
      0 0 20px rgba(59, 130, 246, 0.5);
    animation: dotPulse 2s ease-in-out infinite;
  }

  @keyframes dotPulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(0.85);
    }
  }

  /* ===== HERO CONTENT ===== */
  .hero-content {
    max-width: 950px;
    text-align: center;
    position: relative;
    z-index: 10;
  }

  /* ===== TITLE SECTION ===== */
  .title-section {
    margin-bottom: 3.5rem;
  }

  .overline {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    opacity: 0;
    animation: slideDown 1s cubic-bezier(0.34, 1.56, 0.64, 1) 0.3s forwards;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bracket-l,
  .bracket-r {
    font-size: 1.8rem;
    color: #3b82f6;
    font-weight: 200;
    animation: bracketFlicker 4s ease-in-out infinite;
  }

  @keyframes bracketFlicker {
    0%,
    100% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
    }
  }

  .overline-text {
    font-family: "Courier New", monospace;
    font-size: clamp(0.65rem, 1.5vw, 0.85rem);
    font-weight: 600;
    letter-spacing: 0.35em;
    color: rgba(255, 255, 255, 0.5);
  }

  .main-title {
    font-size: clamp(4rem, 14vw, 8rem);
    font-weight: 900;
    line-height: 0.95;
    margin: 0 0 2.5rem 0;
    letter-spacing: -0.03em;
    position: relative;
  }

  .main-title::before {
    content: attr(data-text);
    position: absolute;
    inset: 0;
    z-index: -1;
    opacity: 0.3;
    filter: blur(20px);
    background: linear-gradient(90deg, #3b82f6, #8b5cf6, #3b82f6);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 8s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .title-line {
    display: block;
    margin: 0.2em 0;
    position: relative;
  }

  .char {
    display: inline-block;
    opacity: 0;
    transform: translateY(80px) rotateX(-90deg);
    background: linear-gradient(180deg, #ffffff 0%, #e0e0e0 50%, #b0b0b0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    will-change: transform, opacity, filter;
    transform-style: preserve-3d;
    backface-visibility: hidden;
  }

  @keyframes charReveal {
    0% {
      opacity: 0;
      transform: translateY(80px) rotateX(-90deg);
    }
    100% {
      opacity: 1;
      transform: translateY(0) rotateX(0deg);
    }
  }

  .char-glow {
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #3b82f6 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 25px rgba(59, 130, 246, 0.9));
    will-change: transform, filter, background-position;
    transform-style: preserve-3d;
    backface-visibility: hidden;
  }

  @keyframes charGlow {
    0%,
    100% {
      filter: drop-shadow(0 0 15px rgba(59, 130, 246, 0.7))
        drop-shadow(0 0 30px rgba(59, 130, 246, 0.4));
    }
    50% {
      filter: drop-shadow(0 0 35px rgba(59, 130, 246, 1))
        drop-shadow(0 0 50px rgba(139, 92, 246, 0.9))
        drop-shadow(0 0 50px rgba(139, 92, 246, 0.9))
        drop-shadow(0 0 70px rgba(59, 130, 246, 0.6));
    }
  }

  .role-display {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    min-height: 2.5rem;
    opacity: 0;
    animation: fadeUp 1s ease-out 1.2s forwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .prompt {
    font-family: "Courier New", monospace;
    font-size: 1.6rem;
    font-weight: 700;
    color: #3b82f6;
  }

  .role-output {
    font-family: "Courier New", monospace;
    font-size: clamp(1.1rem, 2.8vw, 1.5rem);
    font-weight: 600;
    letter-spacing: 0.08em;
    color: #3b82f6;
  }

  .cursor-blink {
    font-family: monospace;
    font-size: 1.5rem;
    color: #3b82f6;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%,
    50% {
      opacity: 1;
    }
    51%,
    100% {
      opacity: 0;
    }
  }

  /* ===== TAGLINE ===== */
  .tagline {
    font-size: clamp(1.05rem, 2.2vw, 1.3rem);
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.65);
    max-width: 650px;
    margin: 0 auto 3.5rem;
    opacity: 0;
    animation: fadeUp 1s ease-out 1.4s forwards;
  }

  .highlight {
    color: #3b82f6;
    font-weight: 700;
    text-shadow: 0 0 20px rgba(59, 130, 246, 0.6);
    position: relative;
  }

  /* ===== CTA BUTTONS ===== */
  .cta-section {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 4.5rem;
    opacity: 0;
    animation: fadeUp 1s ease-out 1.6s forwards;
  }

  .cta-button {
    position: relative;
    padding: 1.1rem 2.8rem;
    font-family: "Courier New", monospace;
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 0.18em;
    text-decoration: none;
    text-transform: uppercase;
    color: #fff;
    background: transparent;
    border: none;
    cursor: pointer;
    overflow: hidden;
    will-change: transform, filter;
    transform-style: preserve-3d;
    backface-visibility: hidden;
    contain: layout style paint;
  }

  .cta-button::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(59, 130, 246, 0.3),
      rgba(139, 92, 246, 0.3)
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 0;
  }

  .cta-button:hover::before {
    opacity: 1;
  }

  .button-bg {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    transition: all 0.5s ease;
    z-index: 1;
  }

  .button-glow {
    position: absolute;
    inset: 0;
    border: 2px solid;
    transition: all 0.5s ease;
    z-index: 2;
    animation: borderPulse 3s ease-in-out infinite;
  }

  @keyframes borderPulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
  }

  .primary .button-glow {
    border-color: #3b82f6;
    box-shadow:
      inset 0 0 25px rgba(59, 130, 246, 0.15),
      0 0 30px rgba(59, 130, 246, 0.4),
      0 0 50px rgba(59, 130, 246, 0.2);
  }

  .secondary .button-glow {
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow:
      inset 0 0 20px rgba(255, 255, 255, 0.05),
      0 0 20px rgba(255, 255, 255, 0.1);
  }

  .button-content {
    position: relative;
    z-index: 3;
    display: flex;
    align-items: center;
    gap: 0.9rem;
    transition: all 0.5s ease;
  }

  .primary .button-content {
    color: #3b82f6;
  }

  .secondary .button-content {
    color: rgba(255, 255, 255, 0.75);
  }

  .button-icon {
    font-size: 1.2rem;
    transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .cta-button:hover {
    transform: translateY(-6px) scale(1.03);
    filter: brightness(1.2);
  }

  .cta-button:active {
    transform: translateY(-2px) scale(1.01);
  }

  .cta-button:hover .button-icon {
    transform: translateX(6px) scale(1.15);
  }

  .primary:hover .button-bg {
    background: rgba(59, 130, 246, 0.25);
  }

  .primary:hover .button-glow {
    border-color: #3b82f6;
    box-shadow:
      inset 0 0 40px rgba(59, 130, 246, 0.3),
      0 0 50px rgba(59, 130, 246, 0.6),
      0 0 80px rgba(59, 130, 246, 0.3),
      0 0 100px rgba(139, 92, 246, 0.2);
    animation: none;
  }

  .secondary:hover .button-bg {
    background: rgba(139, 92, 246, 0.15);
  }

  .secondary:hover .button-glow {
    border-color: #8b5cf6;
    box-shadow:
      inset 0 0 30px rgba(139, 92, 246, 0.2),
      0 0 40px rgba(139, 92, 246, 0.4),
      0 0 60px rgba(139, 92, 246, 0.2);
    animation: none;
  }

  .secondary:hover .button-content {
    color: #8b5cf6;
  }

  /* ===== STATS DISPLAY ===== */
  .stats-display {
    display: flex;
    justify-content: center;
    gap: 3.5rem;
    flex-wrap: wrap;
    opacity: 0;
    animation: fadeUp 1s ease-out 1.8s forwards;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.85rem;
  }

  .stat-bar {
    width: 150px;
    height: 6px;
    background: rgba(59, 130, 246, 0.12);
    border-radius: 3px;
    position: relative;
    overflow: hidden;
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
  }

  .stat-progress {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: var(--stat-percent);
    background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%);
    border-radius: 3px;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.6);
    animation: fillStat 2.5s cubic-bezier(0.65, 0, 0.35, 1) forwards;
  }

