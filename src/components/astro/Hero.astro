      0 0 20px rgba(59, 130, 246, 0.3);
  }

  .floating-particles .particle:nth-child(1) {
    left: 10%;
    top: 20%;
    animation-delay: 0s;
    animation-duration: 12s;
  }

  .floating-particles .particle:nth-child(2) {
    left: 80%;
    top: 40%;
    animation-delay: 3s;
    animation-duration: 15s;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.8), transparent);
    box-shadow:
      0 0 10px rgba(139, 92, 246, 0.5),
      0 0 20px rgba(139, 92, 246, 0.3);
  }

  .floating-particles .particle:nth-child(3) {
    left: 50%;
    top: 70%;
    animation-delay: 6s;
    animation-duration: 18s;
  }

  .floating-particles .particle:nth-child(4) {
    left: 25%;
    top: 60%;
    animation-delay: 2s;
    animation-duration: 14s;
    background: radial-gradient(circle, rgba(14, 165, 233, 0.8), transparent);
    box-shadow:
      0 0 10px rgba(14, 165, 233, 0.5),
      0 0 20px rgba(14, 165, 233, 0.3);
  }

  .floating-particles .particle:nth-child(5) {
    left: 70%;
    top: 15%;
    animation-delay: 8s;
    animation-duration: 16s;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.8), transparent);
    box-shadow:
      0 0 10px rgba(168, 85, 247, 0.5),
      0 0 20px rgba(168, 85, 247, 0.3);
  }

  @keyframes floatParticle {
    0% {
      opacity: 0;
      transform: translate(0, 0) scale(0.5);
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      opacity: 0;
      transform: translate(100px, -200px) scale(1.5);
    }
  }

  /* ===== SCAN EFFECTS ===== */
  .scan-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(59, 130, 246, 0.3) 20%,
      #3b82f6 40%,
      #8b5cf6 60%,
      rgba(139, 92, 246, 0.3) 80%,
      transparent 100%
    );
    box-shadow:
      0 0 20px rgba(59, 130, 246, 1),
      0 0 40px rgba(139, 92, 246, 0.6),
      0 0 60px rgba(59, 130, 246, 0.4);
    animation: scanDown 6s linear infinite;
    z-index: 4;
    filter: blur(0.5px);
  }

  @keyframes scanDown {
    0% {
      top: -5%;
      opacity: 0;
      transform: scaleX(0.8);
    }
    10% {
      opacity: 1;
      transform: scaleX(1);
    }
    90% {
      opacity: 1;
      transform: scaleX(1);
    }
    100% {
      top: 105%;
      opacity: 0;
      transform: scaleX(0.8);
    }
  }

  .scan-grid {
    position: absolute;
    inset: 0;
    background-image:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(59, 130, 246, 0.03) 2px,
        rgba(59, 130, 246, 0.03) 4px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        rgba(59, 130, 246, 0.03) 2px,
        rgba(59, 130, 246, 0.03) 4px
      );
    z-index: 1;
    pointer-events: none;
    opacity: 0.6;
    animation: gridPulse 8s ease-in-out infinite;
  }

  @keyframes gridPulse {
    0%,
    100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.7;
    }
  }

  /* ===== LIGHT RAYS ===== */
  .light-ray {
    position: absolute;
    width: 2px;
    height: 100%;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(59, 130, 246, 0.2) 30%,
      #3b82f6 50%,
      rgba(59, 130, 246, 0.2) 70%,
      transparent 100%
    );
    opacity: 0;
    filter: blur(2px);
    animation: rayPulse 12s ease-in-out infinite;
    z-index: 2;
    box-shadow:
      0 0 10px rgba(59, 130, 246, 0.5),
      0 0 20px rgba(59, 130, 246, 0.3);
  }

  .ray-1 {
    left: 25%;
    animation-delay: 0s;
  }

  .ray-2 {
    left: 50%;
    animation-delay: 4s;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(139, 92, 246, 0.2) 30%,
      #8b5cf6 50%,
      rgba(139, 92, 246, 0.2) 70%,
      transparent 100%
    );
    box-shadow:
      0 0 10px rgba(139, 92, 246, 0.5),
      0 0 20px rgba(139, 92, 246, 0.3);
  }

  .ray-3 {
    left: 75%;
    animation-delay: 8s;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(14, 165, 233, 0.2) 30%,
      #0ea5e9 50%,
      rgba(14, 165, 233, 0.2) 70%,
      transparent 100%
    );
    box-shadow:
      0 0 10px rgba(14, 165, 233, 0.5),
      0 0 20px rgba(14, 165, 233, 0.3);
  }

  @keyframes rayPulse {
    0%,
    100% {
      opacity: 0;
      transform: scaleY(0.95);
    }
    50% {
      opacity: 0.4;
      transform: scaleY(1);
    }
  }

  /* ===== AMBIENT ORBS ===== */
  .ambient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.4;
    z-index: 1;
    mix-blend-mode: screen;
    will-change: transform, opacity;
    contain: layout style paint;
    backface-visibility: hidden;
  }

  .orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 0.6) 0%,
      rgba(59, 130, 246, 0.3) 40%,
      transparent 70%
    );
    top: -300px;
    right: -200px;
    animation-duration: 25s;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.5) 0%,
      rgba(139, 92, 246, 0.25) 40%,
      transparent 70%
    );
    bottom: -250px;
    left: -200px;
    animation-delay: 8s;
    animation-duration: 22s;
  }

  .orb-3 {
    width: 450px;
    height: 450px;
    background: radial-gradient(
      circle,
      rgba(14, 165, 233, 0.45) 0%,
      rgba(14, 165, 233, 0.2) 40%,
      transparent 70%
    );
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 15s;
    animation-duration: 28s;
  }

  @keyframes orbDrift {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.4;
    }
    25% {
      transform: translate(50px, -50px) scale(1.1);
      opacity: 0.5;
    }
    50% {
      transform: translate(-40px, 50px) scale(0.95);
      opacity: 0.6;
    }
    75% {
      transform: translate(40px, 40px) scale(1.05);
      opacity: 0.45;
    }
  }

  /* ===== FLOATING TECH ELEMENTS ===== */
  .tech-element {
    position: absolute;
    width: 100px;
    height: 100px;
    z-index: 2;
    filter: drop-shadow(0 0 15px rgba(59, 130, 246, 0.3));
    will-change: transform, opacity;
    contain: layout style paint;
    backface-visibility: hidden;
  }

  .element-inner {
    width: 100%;
    height: 100%;
    border: 2px solid rgba(59, 130, 246, 0.4);
    background: linear-gradient(
      135deg,
      rgba(59, 130, 246, 0.08) 0%,
      rgba(139, 92, 246, 0.05) 100%
    );
    box-shadow:
      0 0 30px rgba(59, 130, 246, 0.2),
      inset 0 0 20px rgba(59, 130, 246, 0.1);
    animation: rotateElement 18s linear infinite;
    backdrop-filter: blur(2px);
  }

  .element-1 {
    top: 10%;
    left: 8%;
    animation-delay: 0s;
  }

  .element-1 .element-inner {
    transform: rotate(45deg);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .element-2 {
    top: 65%;
    right: 12%;
    width: 80px;
    height: 80px;
    animation-delay: 7s;
  }

  .element-2 .element-inner {
    border-radius: 50%;
    border-color: rgba(139, 92, 246, 0.5);
    background: linear-gradient(
      135deg,
      rgba(139, 92, 246, 0.08) 0%,
      rgba(59, 130, 246, 0.05) 100%
    );
    animation-duration: 20s;
  }

  .element-3 {
    bottom: 15%;
    left: 12%;
    width: 90px;
    height: 90px;
    animation-delay: 14s;
  }

  .element-3 .element-inner {
    clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    border-color: rgba(14, 165, 233, 0.5);
    background: linear-gradient(
      135deg,
      rgba(14, 165, 233, 0.08) 0%,
      rgba(59, 130, 246, 0.05) 100%
    );
    animation-duration: 16s;
    animation-direction: reverse;
  }

  @keyframes floatElement {
    0%,
    100% {
      transform: translateY(0) translateX(0) scale(1) rotate(0deg);
      opacity: 0.5;
    }
    25% {
      transform: translateY(-30px) translateX(20px) scale(1.05) rotate(5deg);
      opacity: 0.7;
    }
    50% {
      transform: translateY(-50px) translateX(-10px) scale(1.12) rotate(-3deg);
      opacity: 0.8;
    }
    75% {
      transform: translateY(-20px) translateX(15px) scale(1.08) rotate(7deg);
      opacity: 0.65;
    }
  }

  @keyframes rotateElement {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* ===== CORNER FRAMES ===== */
  .frame-corner {
    position: absolute;
    z-index: 5;
    opacity: 0.9;
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
  }

  .frame-corner:hover {
    opacity: 1;
    transform: scale(1.05);
  }

  .corner-tl {
    top: 2rem;
    left: 2rem;
  }
  .corner-tr {
    top: 2rem;
    right: 2rem;
  }
  .corner-bl {
    bottom: 2rem;
    left: 2rem;
  }
  .corner-br {
    bottom: 2rem;
    right: 2rem;
  }

  /* ===== HUD INTERFACE ===== */
  .hud-interface {
    position: absolute;
    top: 4.5rem;
    left: 0;
    right: 0;
