<script>
  // Optimized 3D Grid Background - Performance Enhanced
  function initHeroGrid() {
    const canvas = document.getElementById(
      "hero-grid-canvas",
    ) as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext("2d", { alpha: true, desynchronized: true });
    if (!ctx) return;

    const heroSection = document.getElementById("hero");
    if (!heroSection) return;

    let animationFrameId: number;
    let isVisible = true;
    let lastTime = 0;
    const targetFPS = 30;
    const frameInterval = 1000 / targetFPS;

    function resizeCanvas() {
      if (!heroSection || !ctx) return;
      const rect = heroSection.getBoundingClientRect();
      const dpr = window.devicePixelRatio || 1;
      canvas.width = rect.width * dpr;
      canvas.height = rect.height * dpr;
      canvas.style.width = `${rect.width}px`;
      canvas.style.height = `${rect.height}px`;
      ctx.scale(dpr, dpr);
    }
    resizeCanvas();

    const gridSize = 40;
    const perspective = 500;
    let mouseX = canvas.width / 2;
    let mouseY = canvas.height / 2;
    let targetMouseX = canvas.width / 2;
    let targetMouseY = canvas.height / 2;

    // Throttled resize handler
    let resizeTimer: number;
    function handleResize() {
      clearTimeout(resizeTimer);
      resizeTimer = window.setTimeout(() => {
        resizeCanvas();
      }, 250);
    }

    // Optimized mouse tracking with throttling
    let rafMouseId: number | null = null;
    function handleMouseMove(e: MouseEvent) {
      if (!heroSection || rafMouseId) return;

      rafMouseId = requestAnimationFrame(() => {
        const rect = heroSection.getBoundingClientRect();
        if (e.clientY >= rect.top && e.clientY <= rect.bottom) {
          targetMouseX = (e.clientX - rect.left) * (canvas.width / rect.width);
          targetMouseY = (e.clientY - rect.top) * (canvas.height / rect.height);
        }
        rafMouseId = null;
      });
    }

    // Intersection Observer for performance
    const observer = new IntersectionObserver(
      (entries) => {
        isVisible = entries[0].isIntersecting;
        if (!isVisible) {
          cancelAnimationFrame(animationFrameId);
        } else {
          draw3DGrid();
        }
      },
      { threshold: 0.1 },
    );
    observer.observe(heroSection);

    window.addEventListener("resize", handleResize, { passive: true });
    document.addEventListener("mousemove", handleMouseMove, { passive: true });

    function draw3DGrid(currentTime: number = 0) {
      if (!ctx || !heroSection || !isVisible) return;

      // Throttle to target FPS
      const elapsed = currentTime - lastTime;
      if (elapsed < frameInterval) {
        animationFrameId = requestAnimationFrame(draw3DGrid);
        return;
      }
      lastTime = currentTime - (elapsed % frameInterval);

      const rect = heroSection.getBoundingClientRect();
      const width = rect.width;
      const height = rect.height;

      // Smooth mouse following with easing
      mouseX += (targetMouseX - mouseX) * 0.08;
      mouseY += (targetMouseY - mouseY) * 0.08;

      // Clear with optimized method
      ctx!.clearRect(0, 0, width, height);

      const offsetX = ((mouseX - width / 2) / width) * 50;
      const offsetY = ((mouseY - height / 2) / height) * 50;

      ctx!.strokeStyle = "rgba(59, 130, 246, 0.2)";
      ctx!.lineWidth = 1;

      // Horizontal lines
      for (let i = -10; i <= 10; i++) {
        ctx!.beginPath();
        const y = height / 2 + i * gridSize;
        const z = i * gridSize;

        for (let j = -20; j <= 20; j++) {
          const x = width / 2 + j * gridSize;
          const scale = perspective / (perspective + z + offsetY);
          const projX = width / 2 + (x - width / 2 + offsetX) * scale;
          const projY = height * 0.7 + (y - height / 2) * scale;

          if (j === -20) {
            ctx!.moveTo(projX, projY);
          } else {
            ctx!.lineTo(projX, projY);
          }
        }
        ctx!.stroke();
      }

      // Vertical lines
      for (let j = -20; j <= 20; j++) {
        ctx!.beginPath();
        for (let i = -10; i <= 10; i++) {
          const x = width / 2 + j * gridSize;
          const y = height / 2 + i * gridSize;
          const z = i * gridSize;
          const scale = perspective / (perspective + z + offsetY);
          const projX = width / 2 + (x - width / 2 + offsetX) * scale;
          const projY = height * 0.7 + (y - height / 2) * scale;

          if (i === -10) {
            ctx!.moveTo(projX, projY);
          } else {
            ctx!.lineTo(projX, projY);
          }
        }
        ctx!.stroke();
      }

      // Add glow points at intersections
      ctx!.fillStyle = "rgba(59, 130, 246, 0.6)";
      ctx!.shadowColor = "rgba(59, 130, 246, 0.8)";
      ctx!.shadowBlur = 10;

      for (let i = -5; i <= 5; i += 2) {
        for (let j = -10; j <= 10; j += 3) {
          const x = width / 2 + j * gridSize;
          const y = height / 2 + i * gridSize;
          const z = i * gridSize;
          const scale = perspective / (perspective + z + offsetY);
          const projX = width / 2 + (x - width / 2 + offsetX) * scale;
          const projY = height * 0.7 + (y - height / 2) * scale;

          ctx!.beginPath();
          ctx!.arc(projX, projY, 2 * scale, 0, Math.PI * 2);
          ctx!.fill();
        }
      }

      ctx!.shadowBlur = 0;

      animationFrameId = requestAnimationFrame(draw3DGrid);
    }

    draw3DGrid();

    // Cleanup function
    return () => {
      cancelAnimationFrame(animationFrameId);
      observer.disconnect();
      window.removeEventListener("resize", handleResize);
      document.removeEventListener("mousemove", handleMouseMove);
    };
  }

  // Optimized Cursor Trail Effect - Performance Enhanced
  function initCursorTrail() {
    const canvas = document.getElementById("cursor-trail") as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext("2d", { alpha: true, desynchronized: true });
    if (!ctx) return;

    const heroSection = document.getElementById("hero");
    if (!heroSection) return;

    let isVisible = true;
    let animationFrameId: number;
    let lastParticleTime = 0;
    const PARTICLE_INTERVAL = 16; // Increased for better performance

    // Set canvas size to match hero section with DPR
    function resizeCanvas() {
      if (!heroSection || !ctx) return;
      const rect = heroSection.getBoundingClientRect();
      const dpr = window.devicePixelRatio || 1;
      canvas.width = rect.width * dpr;
      canvas.height = rect.height * dpr;
      canvas.style.width = `${rect.width}px`;
      canvas.style.height = `${rect.height}px`;
      ctx.scale(dpr, dpr);
    }
    resizeCanvas();

    interface Particle {
      x: number;
      y: number;
      size: number;
      opacity: number;
      vx: number;
      vy: number;
      hue: number;
      life: number;
    }

    const particles: Particle[] = [];
    const MAX_PARTICLES = 80; // Reduced for better performance

    function handleMouseMove(e: MouseEvent) {
      if (!heroSection) return;

      const now = performance.now();
      if (now - lastParticleTime < PARTICLE_INTERVAL) return;
      lastParticleTime = now;

      const heroRect = heroSection.getBoundingClientRect();

      // Only create particles if mouse is within hero section
      if (e.clientY >= heroRect.top && e.clientY <= heroRect.bottom) {
        const rect = canvas.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        // Create particle at cursor position
        particles.push({
          x,
          y,
          size: Math.random() * 2.5 + 1.5,
          opacity: 1,
          vx: (Math.random() - 0.5) * 0.8,
          vy: (Math.random() - 0.5) * 0.8,
          hue: Math.random() * 60 + 200, // Blue to purple range
          life: 1,
        });

        if (particles.length > MAX_PARTICLES) {
          particles.shift();
        }
      }
    }

    // Intersection Observer for performance
    const observer = new IntersectionObserver(
      (entries) => {
        isVisible = entries[0].isIntersecting;
        if (!isVisible) {
          cancelAnimationFrame(animationFrameId);
        } else {
          animate();
        }
      },
      { threshold: 0.1 },
    );
    observer.observe(heroSection);

    // Throttled mouse handler
    let rafMouseId: number | null = null;
    const throttledMouseMove = (e: MouseEvent) => {
      if (rafMouseId) return;
      rafMouseId = requestAnimationFrame(() => {
        handleMouseMove(e);
        rafMouseId = null;
      });
    };

    document.addEventListener("mousemove", throttledMouseMove, {
      passive: true,
    });

    function animate() {
      if (!ctx || !isVisible) return;

      // Optimized clear with fade
      ctx.save();
      ctx.globalCompositeOperation = "destination-out";
      ctx.fillStyle = "rgba(0, 0, 0, 0.15)";
      ctx.fillRect(
        0,
        0,
        canvas.width / (window.devicePixelRatio || 1),
        canvas.height / (window.devicePixelRatio || 1),
      );
      ctx.restore();

      // Update and render particles
      for (let i = particles.length - 1; i >= 0; i--) {
        const p = particles[i];

        // Create gradient for each particle
        const gradient = ctx.createRadialGradient(
          p.x,
          p.y,
          0,
          p.x,
          p.y,
          p.size * 3,
        );
        gradient.addColorStop(
          0,
          `hsla(${p.hue}, 100%, 60%, ${p.opacity * 0.9})`,
        );
        gradient.addColorStop(
          0.5,
          `hsla(${p.hue}, 100%, 50%, ${p.opacity * 0.5})`,
        );
        gradient.addColorStop(1, `hsla(${p.hue}, 100%, 40%, 0)`);

        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size * 3, 0, Math.PI * 2);
        ctx.fillStyle = gradient;
        ctx.fill();

        // Add bright center
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size * 0.8, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(255, 255, 255, ${p.opacity * 0.8})`;
        ctx.fill();

        // Update particle properties
        p.x += p.vx;
        p.y += p.vy;
        p.life -= 0.015;
        p.opacity = p.life;
        p.size *= 0.985;
        p.vx *= 0.98;
        p.vy *= 0.98;

        // Remove dead particles
        if (p.life <= 0 || p.size < 0.3) {
          particles.splice(i, 1);
        }
