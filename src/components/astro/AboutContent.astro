---
import type { Lang } from '../../i18n';
import { useTranslations, getLocalizedPath } from '../../i18n';
import { aboutT } from '../../i18n/pages/about';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(aboutT);

const works = [
  {
    type: t(lang, 'work1Type'),
    title: t(lang, 'work1Title'),
    description: t(lang, 'work1Desc'),
    tags: ["Python", "TensorFlow", "GPT", "Computer Vision"],
    accentColor: "#8b5cf6",
    accentRgb: "139, 92, 246",
  },
  {
    type: t(lang, 'work2Type'),
    title: t(lang, 'work2Title'),
    description: t(lang, 'work2Desc'),
    tags: ["Podcast", "Storytelling", "Education", "Spanish"],
    accentColor: "#06b6d4",
    accentRgb: "6, 182, 212",
  },
  {
    type: t(lang, 'work3Type'),
    title: t(lang, 'work3Title'),
    description: t(lang, 'work3Desc'),
    tags: ["React", "Astro", "Node.js", "TypeScript"],
    accentColor: "#3b82f6",
    accentRgb: "59, 130, 246",
  },
  {
    type: t(lang, 'work4Type'),
    title: t(lang, 'work4Title'),
    description: t(lang, 'work4Desc'),
    tags: ["GitHub", "Open Source", "Code Review", "Documentation"],
    accentColor: "#22c55e",
    accentRgb: "34, 197, 94",
  },
  {
    type: t(lang, 'work5Type'),
    title: t(lang, 'work5Title'),
    description: t(lang, 'work5Desc'),
    tags: ["PyTorch", "LLMs", "Hugging Face", "NLP"],
    accentColor: "#f59e0b",
    accentRgb: "245, 158, 11",
  },
  {
    type: t(lang, 'work6Type'),
    title: t(lang, 'work6Title'),
    description: t(lang, 'work6Desc'),
    tags: ["Docker", "AWS", "GCP", "CI/CD"],
    accentColor: "#06b6d4",
    accentRgb: "6, 182, 212",
  },
];

const skillCategories = [
  {
    icon: "code",
    title: t(lang, 'skillCat1'),
    skills: ["Python", "JavaScript", "TypeScript", "SQL", "HTML/CSS"],
  },
  {
    icon: "ai",
    title: t(lang, 'skillCat2'),
    skills: ["TensorFlow", "PyTorch", "LLMs", "GPT", "Computer Vision", "NLP"],
  },
  {
    icon: "frontend",
    title: t(lang, 'skillCat3'),
    skills: ["React", "Astro", "Next.js", "Tailwind CSS", "GSAP"],
  },
  {
    icon: "backend",
    title: t(lang, 'skillCat4'),
    skills: ["Node.js", "REST APIs", "Docker", "AWS", "GCP", "PostgreSQL"],
  },
];

const hobbies = [
  {
    icon: "music",
    title: t(lang, 'hobby1Title'),
    description: t(lang, 'hobby1Desc'),
  },
  {
    icon: "reading",
    title: t(lang, 'hobby2Title'),
    description: t(lang, 'hobby2Desc'),
  },
  {
    icon: "sports",
    title: t(lang, 'hobby3Title'),
    description: t(lang, 'hobby3Desc'),
  },
];

const socials = [
  { name: "Instagram", handle: "@your_handle", url: "https://instagram.com/", color: "#E4405F", colorRgb: "228, 64, 95" },
  { name: "LinkedIn", handle: "/in/your-profile", url: "https://linkedin.com/in/", color: "#0A66C2", colorRgb: "10, 102, 194" },
  { name: "GitHub", handle: "@yourusername", url: "https://github.com/", color: "#ffffff", colorRgb: "255, 255, 255" },
  { name: "TikTok", handle: "@your_handle", url: "https://tiktok.com/", color: "#00f2ea", colorRgb: "0, 242, 234" },
  { name: "Hugging Face", handle: "@your_handle", url: "https://huggingface.co/", color: "#FFD21E", colorRgb: "255, 210, 30" },
  { name: "Facebook", handle: "Your Name", url: "https://facebook.com/", color: "#1877F2", colorRgb: "24, 119, 242" },
];

const quickFacts = [
  { label: t(lang, 'factLocationLabel'), value: t(lang, 'factLocationValue') },
  { label: t(lang, 'factLanguagesLabel'), value: t(lang, 'factLanguagesValue') },
  { label: t(lang, 'factFocusLabel'), value: t(lang, 'factFocusValue') },
  { label: t(lang, 'factPodcastLabel'), value: t(lang, 'factPodcastValue') },
];

const podcastPath = getLocalizedPath('/programa-tu-mente-podcast', lang);
const blogPath = getLocalizedPath('/blog', lang);

const structuredData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Daniel Cubillos",
  "url": "https://danielfcramos.dev",
  "jobTitle": "Software Engineer",
  "knowsAbout": ["Artificial Intelligence", "Software Development", "Python", "JavaScript", "Machine Learning"],
  "sameAs": [
    "https://instagram.com/",
    "https://linkedin.com/in/",
    "https://github.com/",
    "https://tiktok.com/",
  ],
});
---

<script type="application/ld+json" is:inline set:html={structuredData} />

<main id="about-page">
  <div class="about-bg-effects">
    <div class="about-orb orb-1"></div>
    <div class="about-orb orb-2"></div>
    <div class="about-orb orb-3"></div>
    <div class="grid-lines"></div>
    <div class="noise-overlay"></div>
  </div>

  <!-- HERO -->
  <section class="about-hero">
    <div class="container">
      <div class="hero-label">
        <span class="label-dot"></span>
        <span class="label-text">{t(lang, 'heroLabel')}</span>
      </div>
      <h1 class="hero-name">
        <span class="name-word">Daniel</span>
        <span class="name-word accent">Cubillos</span>
      </h1>
      <p class="hero-role">{t(lang, 'heroRole')}</p>
      <p class="hero-oneliner">
        <span class="bracket">&lt;</span>
        {t(lang, 'heroOneliner')}
        <span class="bracket">/&gt;</span>
      </p>
      <div class="hero-indicators">
        <div class="indicator">
          <span class="indicator-dot active"></span>
          <span>{t(lang, 'indicatorAvailable')}</span>
        </div>
        <div class="indicator">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="14" height="14"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
          <span>{t(lang, 'indicatorLocation')}</span>
        </div>
        <div class="indicator">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="14" height="14"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          <span>{t(lang, 'indicatorFocus')}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- BIO -->
  <section class="about-bio">
    <div class="container">
      <div class="bio-grid">
        <div class="bio-text">
          <div class="slabel">
            <span class="slabel-dot"></span>
            <span>{t(lang, 'bioLabel')}</span>
          </div>
          <h2 class="section-title" set:html={t(lang, 'bioTitle').replace(/\n/g, '<br/>')} />
          <p class="bio-paragraph">{t(lang, 'bioParagraph1')}</p>
          <p class="bio-paragraph">{t(lang, 'bioParagraph2')}</p>
          <p class="bio-paragraph">{t(lang, 'bioParagraph3')}</p>
        </div>
        <div class="bio-facts">
          <div class="facts-card">
            {quickFacts.map((fact) => (
              <div class="fact-row">
                <span class="fact-label">{fact.label}</span>
                <span class="fact-value">{fact.value}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"><div class="divider-line"></div></div>

  <!-- PROJECTS & WORK -->
  <section class="about-works">
    <div class="container">
      <div class="slabel centered">
        <span class="slabel-dot"></span>
        <span>{t(lang, 'worksLabel')}</span>
      </div>
      <h2 class="section-title centered">{t(lang, 'worksTitle')}</h2>
      <div class="works-grid">
        {works.map((work, index) => (
          <div class="work-card" style={`--work-accent: ${work.accentColor}; --work-rgb: ${work.accentRgb}`}>
            <span class="work-number">{String(index + 1).padStart(2, '0')}</span>
            <div class="work-badge">{work.type}</div>
            <h3 class="work-title">{work.title}</h3>
            <p class="work-desc">{work.description}</p>
            <div class="work-tags">
              {work.tags.map((tag) => (
                <span class="work-tag">{tag}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="section-divider"><div class="divider-line"></div></div>

  <!-- SKILLS -->
  <section class="about-skills">
    <div class="container">
      <div class="slabel centered">
        <span class="slabel-dot"></span>
        <span>{t(lang, 'skillsLabel')}</span>
      </div>
      <h2 class="section-title centered">{t(lang, 'skillsTitle')}</h2>
      <div class="skills-grid">
        {skillCategories.map((cat) => (
          <div class="skill-card">
            <div class="skill-icon">
              {cat.icon === "code" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>
              )}
              {cat.icon === "ai" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2a4 4 0 0 1 4 4v1a4 4 0 0 1-8 0V6a4 4 0 0 1 4-4z"/><path d="M8 14s-4 0-4 4v2h16v-2c0-4-4-4-4-4"/><path d="M7 3L5 1M17 3l2-2M12 1v1"/></svg>
              )}
              {cat.icon === "frontend" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="3" width="20" height="14" rx="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
              )}
              {cat.icon === "backend" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="8" rx="2"/><rect x="2" y="14" width="20" height="8" rx="2"/><line x1="6" y1="6" x2="6.01" y2="6"/><line x1="6" y1="18" x2="6.01" y2="18"/></svg>
              )}
            </div>
            <h3 class="skill-title">{cat.title}</h3>
            <div class="skill-chips">
              {cat.skills.map((skill) => (
                <span class="chip">{skill}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="section-divider"><div class="divider-line"></div></div>

  <!-- HOBBIES -->
  <section class="about-hobbies">
    <div class="container">
      <div class="slabel centered">
        <span class="slabel-dot"></span>
        <span>{t(lang, 'hobbiesLabel')}</span>
      </div>
      <h2 class="section-title centered">{t(lang, 'hobbiesTitle')}</h2>
      <div class="hobbies-grid">
        {hobbies.map((hobby) => (
          <div class="hobby-card">
            <div class="hobby-icon">
              {hobby.icon === "music" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
              )}
              {hobby.icon === "reading" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
              )}
              {hobby.icon === "sports" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 8a6 6 0 0 0-6-6 6 6 0 0 0-6 6c0 7 6 13 6 13s6-6 6-13z"/><circle cx="12" cy="8" r="2"/><path d="M9 22h6"/></svg>
              )}
            </div>
            <h3 class="hobby-name">{hobby.title}</h3>
            <p class="hobby-desc">{hobby.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="section-divider"><div class="divider-line"></div></div>

  <!-- SOCIALS -->
  <section class="about-socials">
    <div class="container">
      <div class="slabel centered">
        <span class="slabel-dot"></span>
        <span>{t(lang, 'socialsLabel')}</span>
      </div>
      <h2 class="section-title centered">{t(lang, 'socialsTitle')}</h2>
      <div class="socials-grid">
        {socials.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="social-card"
            style={`--social-color: ${social.color}; --social-rgb: ${social.colorRgb}`}
          >
            <div class="social-icon">
              {social.name === "Instagram" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>
              )}
              {social.name === "LinkedIn" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
              )}
              {social.name === "GitHub" && (
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
              )}
              {social.name === "TikTok" && (
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-2.88 2.5 2.89 2.89 0 0 1 0-5.78c.27 0 .54.04.8.1v-3.5a6.37 6.37 0 0 0-.8-.05A6.34 6.34 0 0 0 3.15 15a6.34 6.34 0 0 0 10.86 4.49V12.8a8.2 8.2 0 0 0 4.77 1.52h.81V10.9a4.84 4.84 0 0 1-1-.21v3.44z"/></svg>
              )}
              {social.name === "Hugging Face" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><circle cx="9" cy="9" r="1" fill="currentColor" stroke="none"/><circle cx="15" cy="9" r="1" fill="currentColor" stroke="none"/></svg>
              )}
              {social.name === "Facebook" && (
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              )}
            </div>
            <div class="social-info">
              <span class="social-name">{social.name}</span>
              <span class="social-handle">{social.handle}</span>
            </div>
            <svg class="social-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="about-cta">
    <div class="container">
      <div class="cta-card">
        <h2 class="cta-title">{t(lang, 'ctaTitle')}</h2>
        <p class="cta-text">{t(lang, 'ctaText')}</p>
        <div class="cta-actions">
          <a href="mailto:your@email.com" class="cta-email-btn">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="18" height="18"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
            <span>{t(lang, 'ctaEmailBtn')}</span>
          </a>
          <div class="cta-links">
            <a href={podcastPath} class="cta-link">{t(lang, 'ctaPodcast')}</a>
            <a href={blogPath} class="cta-link">{t(lang, 'ctaBlog')}</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script>
  async function initAboutAnimations() {
    try {
      // @ts-ignore
      const { gsap } = await import("gsap");
      // @ts-ignore
      const { ScrollTrigger } = await import("gsap/ScrollTrigger");
      gsap.registerPlugin(ScrollTrigger);

      const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
      if (prefersReducedMotion || (window as any).__GSAP_DISABLE_ANIMATIONS__) return;

      // Hero
      gsap.fromTo(".hero-label",
        { opacity: 0, y: 20, scale: 0.9 },
        { opacity: 1, y: 0, scale: 1, duration: 0.6, delay: 0.2, ease: "back.out(1.5)" }
      );
      const nameWords = document.querySelectorAll(".name-word");
      gsap.set(nameWords, { opacity: 0, y: 50 });
      gsap.to(nameWords, { opacity: 1, y: 0, duration: 0.8, stagger: 0.15, ease: "power3.out", delay: 0.4 });
      gsap.fromTo(".hero-role",
        { opacity: 0, y: 20 },
        { opacity: 1, y: 0, duration: 0.6, delay: 0.8, ease: "power2.out" }
      );
      gsap.fromTo(".hero-oneliner",
        { opacity: 0, y: 20 },
        { opacity: 1, y: 0, duration: 0.6, delay: 1, ease: "power2.out" }
      );
      gsap.fromTo(".hero-indicators",
        { opacity: 0, y: 20 },
        { opacity: 1, y: 0, duration: 0.6, delay: 1.2, ease: "power2.out" }
      );

      // Bio
      ScrollTrigger.create({
        trigger: ".about-bio", start: "top 80%", once: true,
        onEnter: () => {
          gsap.fromTo(".bio-text",
            { opacity: 0, x: -40 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out" }
          );
          gsap.fromTo(".bio-facts",
            { opacity: 0, x: 40 },
            { opacity: 1, x: 0, duration: 0.8, ease: "power2.out", delay: 0.15 }
          );
        },
      });

      // Works / Projects
      ScrollTrigger.create({
        trigger: ".about-works", start: "top 80%", once: true,
        onEnter: () => {
          gsap.fromTo(".work-card",
            { opacity: 0, y: 50, scale: 0.95 },
            { opacity: 1, y: 0, scale: 1, duration: 0.7, stagger: 0.1, ease: "power3.out" }
          );
        },
      });

      // Skills
      ScrollTrigger.create({
        trigger: ".about-skills", start: "top 80%", once: true,
        onEnter: () => {
          gsap.fromTo(".skill-card",
            { opacity: 0, y: 40, scale: 0.95 },
            { opacity: 1, y: 0, scale: 1, duration: 0.6, stagger: 0.1, ease: "back.out(1.2)" }
          );
        },
      });

      // Hobbies
      ScrollTrigger.create({
        trigger: ".about-hobbies", start: "top 80%", once: true,
        onEnter: () => {
          gsap.fromTo(".hobby-card",
            { opacity: 0, y: 40, scale: 0.95, rotation: -1 },
            { opacity: 1, y: 0, scale: 1, rotation: 0, duration: 0.7, stagger: 0.12, ease: "power3.out" }
          );
        },
      });

      // Socials
      ScrollTrigger.create({
        trigger: ".about-socials", start: "top 80%", once: true,
        onEnter: () => {
          gsap.fromTo(".social-card",
            { opacity: 0, y: 30, x: -10 },
            { opacity: 1, y: 0, x: 0, duration: 0.5, stagger: 0.06, ease: "power3.out" }
          );
        },
      });

      // CTA
      ScrollTrigger.create({
        trigger: ".about-cta", start: "top 85%", once: true,
        onEnter: () => {
          gsap.fromTo(".cta-card",
            { opacity: 0, y: 40, scale: 0.97 },
            { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: "power3.out" }
          );
        },
      });

      // Orb parallax
      document.querySelectorAll(".about-orb").forEach((orb, i) => {
        gsap.to(orb, {
          y: `+=${(i + 1) * 25}`, x: `+=${(i % 2 === 0 ? 1 : -1) * 15}`,
          duration: 14 + i * 2, repeat: -1, yoyo: true, ease: "sine.inOut",
        });
      });
    } catch (error) {
      console.warn("GSAP not available for about page:", error);
    }
  }

  if (typeof window !== "undefined") {
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initAboutAnimations);
    } else {
      initAboutAnimations();
    }
  }
</script>

<style>
  #about-page {
    position: relative;
    min-height: 100vh;
    padding: 8rem 2rem 0;
    background: #000000;
    overflow: hidden;
  }

  /* ===== BG ===== */
