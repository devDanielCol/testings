<script>
  // Particle Background Animation
  function initContactParticles() {
    const canvas = document.getElementById(
      "contact-particles",
    ) as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext("2d", { alpha: true, desynchronized: true });
    if (!ctx) return;

    const contactSection = document.getElementById("contact");
    if (!contactSection) return;

    let animationFrameId: number;
    let isVisible = true;
    let canvasWidth = 0;
    let canvasHeight = 0;

    function resizeCanvas() {
      if (!contactSection) return;
      const rect = contactSection.getBoundingClientRect();
      canvasWidth = rect.width;
      canvasHeight = rect.height;
      canvas.width = canvasWidth;
      canvas.height = canvasHeight;
    }
    resizeCanvas();

    interface Particle {
      x: number;
      y: number;
      vx: number;
      vy: number;
      size: number;
      opacity: number;
      color: string;
    }

    const particles: Particle[] = [];
    const particleCount = 40;
    const colors = [
      "rgba(59, 130, 246, 0.4)",
      "rgba(139, 92, 246, 0.4)",
      "rgba(6, 182, 212, 0.4)",
    ];

    function initParticles() {
      particles.length = 0;
      for (let i = 0; i < particleCount; i++) {
        particles.push({
          x: Math.random() * canvasWidth,
          y: Math.random() * canvasHeight,
          vx: (Math.random() - 0.5) * 0.4,
          vy: (Math.random() - 0.5) * 0.4,
          size: Math.random() * 2.5 + 1,
          opacity: Math.random() * 0.4 + 0.3,
          color: colors[Math.floor(Math.random() * colors.length)],
        });
      }
    }
    initParticles();

    const observer = new IntersectionObserver(
      (entries) => {
        isVisible = entries[0].isIntersecting;
        if (!isVisible) {
          cancelAnimationFrame(animationFrameId);
        } else {
          animate();
        }
      },
      { threshold: 0.1 },
    );
    observer.observe(contactSection);

    function animate() {
      if (!ctx || !isVisible) return;

      ctx.clearRect(0, 0, canvasWidth, canvasHeight);

      // Update and draw particles
      for (let i = 0; i < particles.length; i++) {
        const particle = particles[i];

        particle.x += particle.vx;
        particle.y += particle.vy;

        if (particle.x < 0 || particle.x > canvasWidth) particle.vx *= -1;
        if (particle.y < 0 || particle.y > canvasHeight) particle.vy *= -1;

        ctx.beginPath();
        ctx.arc(particle.x, particle.y, particle.size, 0, Math.PI * 2);
        ctx.fillStyle = particle.color;
        ctx.globalAlpha = particle.opacity;
        ctx.fill();
      }

      ctx.globalAlpha = 1;

      // Draw connections between nearby particles
      for (let i = 0; i < particles.length; i++) {
        for (let j = i + 1; j < particles.length; j++) {
          const p1 = particles[i];
          const p2 = particles[j];
          const dx = p1.x - p2.x;
          const dy = p1.y - p2.y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < 150) {
            ctx.beginPath();
            ctx.moveTo(p1.x, p1.y);
            ctx.lineTo(p2.x, p2.y);
            const opacity = 0.2 * (1 - distance / 150);
            ctx.strokeStyle = `rgba(59, 130, 246, ${opacity})`;
            ctx.lineWidth = 1;
            ctx.stroke();
          }
        }
      }

      if (isVisible) {
        animationFrameId = requestAnimationFrame(animate);
      }
    }

    animate();

    let resizeTimer: number;
    function handleResize() {
      clearTimeout(resizeTimer);
      resizeTimer = window.setTimeout(() => {
        resizeCanvas();
        initParticles();
      }, 250);
    }

    window.addEventListener("resize", handleResize, { passive: true });

    return () => {
      cancelAnimationFrame(animationFrameId);
      observer.disconnect();
      window.removeEventListener("resize", handleResize);
    };
  }

  // GSAP Contact Animations
  async function initContactGSAP() {
    try {
      // @ts-ignore
      const { gsap } = await import("gsap");
      // @ts-ignore
      const { ScrollTrigger } = await import("gsap/ScrollTrigger");

      gsap.registerPlugin(ScrollTrigger);

      const prefersReducedMotion = window.matchMedia(
        "(prefers-reduced-motion: reduce)",
      ).matches;
      if (prefersReducedMotion || (window as any).__GSAP_DISABLE_ANIMATIONS__) {
        return;
      }

      const contact = document.getElementById("contact");
      if (!contact) return;

      // Get all elements
      const sectionLabel = contact.querySelector(".section-label");
      const labelDot = sectionLabel?.querySelector(".label-dot");
      const labelText = sectionLabel?.querySelector(".label-text");
      const sectionTitle = contact.querySelector(".section-title");
      const sectionSubtitle = contact.querySelector(".section-subtitle");
      const infoCards = contact.querySelectorAll(".info-card");
      const socialLinks = contact.querySelectorAll(".social-link-compact");
      const decorationCorners = contact.querySelectorAll(".decoration-corner");
      const ctaBox = contact.querySelector(".cta-box");
      const infoHeader = contact.querySelector(".info-header");

      // Set initial states
      gsap.set(sectionLabel, { opacity: 0, y: -20 });
      if (labelDot) gsap.set(labelDot, { scale: 0 });
      if (labelText) gsap.set(labelText, { opacity: 0, x: -10 });
      gsap.set(sectionTitle, { opacity: 0, y: -40 });
      gsap.set(sectionSubtitle, { opacity: 0, y: -20 });
      gsap.set(infoCards, { opacity: 0, y: 40 });
      gsap.set(socialLinks, { opacity: 0, y: 40 });
      gsap.set(decorationCorners, { opacity: 0, scale: 0.5 });
      gsap.set(ctaBox, { opacity: 0, y: 40 });
      if (infoHeader) {
        gsap.set(infoHeader, { opacity: 0, y: -20 });
      }

      // Create main timeline
      const mainTL = gsap.timeline({
        scrollTrigger: {
          trigger: contact,
          start: "top 75%",
          toggleActions: "play none none reverse",
        },
        defaults: { ease: "power2.out" },
      });

      // Animate decoration
      mainTL.to(
        decorationCorners,
        {
          opacity: 0.6,
          scale: 1,
          duration: 0.8,
          stagger: 0.1,
          ease: "back.out(1.5)",
        },
        0,
      );

      // Animate label
      mainTL.to(
        sectionLabel,
        {
          opacity: 1,
          y: 0,
          duration: 0.6,
        },
        "-=0.4",
      );

      if (labelDot) {
        mainTL.to(
          labelDot,
          {
            scale: 1,
            duration: 0.5,
            ease: "back.out(1.5)",
          },
          "-=0.4",
        );
      }

      if (labelText) {
        mainTL.to(
          labelText,
          {
            opacity: 1,
            x: 0,
            duration: 0.5,
          },
          "-=0.4",
        );
      }

      // Animate title
      mainTL.to(
        sectionTitle,
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
        },
        "-=0.3",
      );

      // Animate subtitle
      mainTL.to(
        sectionSubtitle,
        {
          opacity: 1,
          y: 0,
          duration: 0.6,
        },
        "-=0.4",
      );

      // Animate header
      if (infoHeader) {
        mainTL.to(
          infoHeader,
          {
            opacity: 1,
            y: 0,
            duration: 0.6,
          },
          "-=0.2",
        );
      }

      // Animate info cards
      mainTL.to(
        infoCards,
        {
          opacity: 1,
          y: 0,
          duration: 0.7,
          stagger: 0.15,
        },
        "-=0.3",
      );

      // Animate social links
      mainTL.to(
        socialLinks,
        {
          opacity: 1,
          y: 0,
          duration: 0.7,
          stagger: 0.12,
        },
        "-=0.5",
      );

      // Animate CTA
      mainTL.to(
        ctaBox,
        {
          opacity: 1,
          y: 0,
          duration: 0.7,
        },
        "-=0.4",
      );

      // Compact social link hover animations
      const compactLinks = contact.querySelectorAll(".social-link-compact");
      compactLinks.forEach((link) => {
        const linkGlow = link.querySelector(".link-glow");
        const linkIcon = link.querySelector("svg");

        link.addEventListener("mouseenter", () => {
          gsap.to(link, {
            y: -3,
            scale: 1.05,
            duration: 0.3,
            ease: "back.out(1.5)",
          });

          if (linkGlow) {
            gsap.to(linkGlow, {
              opacity: 0.5,
              duration: 0.3,
            });
          }

          if (linkIcon) {
            gsap.to(linkIcon, {
              scale: 1.15,
              rotation: 10,
              duration: 0.3,
              ease: "back.out(1.5)",
            });
          }
        });

        link.addEventListener("mouseleave", () => {
          gsap.to(link, {
            y: 0,
            scale: 1,
            duration: 0.3,
            ease: "power2.out",
          });

          if (linkGlow) {
            gsap.to(linkGlow, {
              opacity: 0,
              duration: 0.3,
            });
          }

          if (linkIcon) {
            gsap.to(linkIcon, {
              scale: 1,
              rotation: 0,
              duration: 0.3,
              ease: "power2.out",
            });
          }
        });
      });

      // Animate chat form elements
      const chatForm = contact.querySelector(".chat-form-container");
      const chatMessages = contact.querySelectorAll(".message");

      if (chatForm) {
        gsap.set(chatForm, { opacity: 0, y: 40 });
        mainTL.to(
          chatForm,
          {
            opacity: 1,
            y: 0,
            duration: 0.7,
          },
          "-=0.5",
        );

        // Animate messages sequentially
        gsap.set(chatMessages, { opacity: 0, x: -30 });
        chatMessages.forEach((msg, i) => {
          gsap.to(msg, {
            opacity: 1,
            x: 0,
            duration: 0.5,
            delay: 1 + i * 0.2,
            ease: "power2.out",
          });
        });
      }

      // Info cards hover
      infoCards.forEach((card) => {
        const cardGlow = card.querySelector(".info-card-glow");

        card.addEventListener("mouseenter", () => {
          gsap.to(card, {
            y: -5,
            duration: 0.3,
            ease: "power2.out",
          });

          if (cardGlow) {
            gsap.to(cardGlow, {
              opacity: 0.4,
              duration: 0.3,
            });
          }
        });

        card.addEventListener("mouseleave", () => {
          gsap.to(card, {
            y: 0,
            duration: 0.3,
            ease: "power2.out",
