---
import type { Lang } from '../../i18n';
import { useTranslations } from '../../i18n';
import { ui } from '../../i18n/ui';

interface Props { lang?: Lang; }
const { lang = 'es' } = Astro.props;
const t = useTranslations(ui);
---

<footer id="footer">
  <div class="footer-content">
    <p>{t(lang, 'footer.copyright')}</p>
    <p class="footer-text">
      {t(lang, 'footer.builtWith')} <a
        href="https://astro.build"
        target="_blank"
        rel="noopener noreferrer">Astro</a>
    </p>
  </div>
</footer>

<style>
  footer {
    position: relative;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, #000000 0%, #0a0a0f 50%, #000205 100%);
    border-top: 1px solid rgba(59, 130, 246, 0.2);
    overflow: hidden;
    min-height: 200px;
  }

  #footer-matrix-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    opacity: 0.9;
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    position: relative;
    z-index: 1;
  }

  .footer-content p {
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
  }

  .footer-content p:last-child {
    margin-bottom: 0;
  }

  .footer-text a {
    color: #3b82f6;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-text a:hover {
    color: #8b5cf6;
    text-shadow: 0 0 15px rgba(59, 130, 246, 0.6);
  }

  @media (max-width: 640px) {
    footer {
      padding: 2rem 1.5rem;
      min-height: 150px;
    }
  }
</style>
