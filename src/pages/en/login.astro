---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/astro/Navigation.astro";
import Footer from "../../components/astro/Footer.astro";
import GoogleLogin from "../../components/react/loginGoogle";
import { useTranslations } from "../../i18n";
import { loginT } from "../../i18n/pages/login";

const t = useTranslations(loginT);
---

<Layout
  lang="en"
  title={t('en', 'meta.title')}
  description={t('en', 'meta.description')}
>
  <Navigation lang="en" />
  <main>
    <GoogleLogin client:load />
  </main>
  <Footer lang="en" />
</Layout>

<style>
  main {
    padding-top: 80px;
  }
</style>
